<!DOCTYPE html>
<html lang="ko"> 
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>메인 페이지</title>
        <style>
            .container {
                width: 800px !important ;
            }
            
            .spinner_dimmed {
                display: none;
                position: fixed;
                top: 0px;
                left: 0px;
                width: 100%;
                height: 100%;
                z-index: 10;
            }
 
            .spinner_loading {
                display: none;
                width: 100%;
                position: relative;
                z-index: 11;
                height: 100%;
            }
 
            .spinner-border {
                display: block;
                position: fixed;
                top: calc(50% - (58px / 2));  
                right: calc(50% - (58px / 2));
                width: 4rem;
                height: 4rem;
            }
            
        </style>
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-md-12 pt-5">
                    <div class="card mb-4">
                        <h5 class="card-header text-center">메인 페이지</h5>
                        <div class="card-body">
                            <div class="text-center">
                                <button class="btn btn-outline-danger" type="button" id="btn_mail">메일 보내기</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade show" id="mail_modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="exampleModalLabel" aria-modal="true" role="dialog" style="display: none;">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">메일 보내기</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="title" class="col-form-label">제목</label>
                            <input type="text" class="form-control" id="title" name="title">
                        </div>
                        <div class="mb-3">
                            <label for="contents" class="col-form-label">내용</label>
                            <textarea class="form-control" id="contents" name="contents" rows="5"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" id="btn_sand">보내기</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="btn_cancel">취소</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="spinner_dimmed"></div>
        <div class="d-flex justify-content-center">
            <div class="spinner-border text-danger spinner_loading" style="display:none;" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
        <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            $(document).ready(function(){
                // modal 첫번째 input에 focus 주는 이벤트
                $(".modal").on("shown.bs.modal", function() {      
                    $(this).find("INPUT").eq(0).focus();
                });
                
                // 폼 초기화
                form_reset = function() {
                    $("#title").val("");
                    $("#contents").val("");
                }
                
                // 메일 보내기
                $("#btn_mail").click(function(){
                    form_reset();
                    $("#mail_modal").modal("show");
                });
                
                // 취소
                $("#btn_cancel").click(function(){
                    form_reset();
                    $("#mail_modal").modal("hide");
                });
                
                // 로딩바 열기
                openLoading = function() {
                    $(".spinner_dimmed").show();
                    $(".spinner_loading").show();
                }
 
                // 로딩바 닫기
                closeLoading = function() {
                    $(".spinner_dimmed").hide();
                    $(".spinner_loading").hide();
                }
                
                // 메일 발송
                $("#btn_sand").click(function(){
                    if ($("#title").val() == "") {
                        alert("제목을 입력하세요.");
                        $("#title").focus();
                        return false;
                    }
                    
                    if ($("#contents").val() == "") {
                        alert("내용을 입력하세요.");
                        $("#contents").focus();
                        return false;
                    }
                    
                    if (confirm("메일 발송을 진행하시겠습니까?")) {
                        openLoading();
                        $("#mail_modal").modal("hide");
 
                        let data = {
                            title: $("#title").val(),
                            contents: $("#contents").val()
                        }
 
                        $.ajax({
                            url: '/send_mail',
                            type: 'POST',
                            data: JSON.stringify(data),
                            dataType: 'json',
                            contentType: 'application/json',
                            success: function (data) {
                                closeLoading();
                                if (data.resultCode == "SUCCESS") {
                                    alert(data.message);
                                }
                            },
                        });
                    }
                });
            });
        </script>
    </body>
</html>